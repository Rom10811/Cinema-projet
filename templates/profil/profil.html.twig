{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="col-md-8" style="margin: auto">
        {% for message in app.flashes('message') %}
            <div class="alert alert-dismissible alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ message }}
            </div>
        {% endfor %}
        <table class="table table-striped table-dark" style="text-align: center">
            <tr>
                <th colspan="2" style="text-align: center">
                    <h1>Mes informations<br>
                        <a href="{{ path('profil_modifier') }}" class="btn btn-success">Modifier votre profil</a>
                    </h1>
                </th>
            </tr>
            <tr>
                <th scope="col">Pseudo</th>
                <th scope="col">{{ app.user.pseudo }}</th>
            </tr>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">{{ app.user.nom }}</th>
            </tr>
            <tr>
                <th scope="col">Prenom</th>
                <th scope="col">{{ app.user.prenom }}</th>
            </tr>
            <tr>
                <th scope="col">Telephone</th>
                <th scope="col">{{ app.user.telephone }}</th>
            </tr>
            <tr>
                <th scope="col">Age</th>
                <th scope="col">{{ app.user.age }}</th>
            </tr>
        </table>
    </div>
{% endblock %}
