{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
    <div class="col-md-8" style="margin: auto">
        <h1>Tags</h1>

        <table class="table table-striped table-dark" style="text-align: center">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.nom }}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('tags_edit', {'id': tag.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas encore de tags</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('tags_new') }}">Ajouter un tag</a>
    </div>
{% endblock %}
