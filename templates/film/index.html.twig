{% extends 'base.html.twig' %}

{% block title %}Film index{% endblock %}

{% block body %}
    <div class="col-md-8" style="margin: auto">
        <h1>Film index</h1>

        <table class="table table-striped table-dark" style="text-align: center">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>DateSortie</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for film in films %}
                <tr>
                    <td>{{ film.id }}</td>
                    <td>{{ film.Nom }}</td>
                    <td>{{ film.Description }}</td>
                    <td>{{ film.DateSortie ? film.DateSortie|date('Y-m-d') : '' }}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('film_edit', {'id': film.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Pas de films</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('film_new') }}">Ajouter un nouveau film</a>
    </div>

{% endblock %}
